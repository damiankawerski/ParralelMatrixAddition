#!/bin/bash -l
#SBATCH -p hpc-short
#SBATCH -N 1 
#SBATCH --exclusive 
#SBATCH -J matrices
#SBATCH -o matrices_times.txt 
#SBATCH --time=00:15:00

g++ -fopenmp sequence_addition.cpp -o sequence_addition

for i in {1..48} 
do  
    echo "Number of threads OMP_NUM_THREADS=$i"
    OMP_NUM_THREADS=$i ./omp_addition >> matrices_times.txt
done
